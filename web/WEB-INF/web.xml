<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">


    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profileController</servlet-name>
        <servlet-class>controller.profileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>controller.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProductInformation</servlet-name>
        <servlet-class>controller.ShowProductInformation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/product/addxx</url-pattern>
    </servlet-mapping>
    <servlet-mapping>

        <servlet-name>ShowProductInformation</servlet-name>
        <url-pattern>/product/ShowProductInformation</url-pattern>
    </servlet-mapping>

        <servlet-name>profileController</servlet-name>
        <url-pattern>/changeProfile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassController</servlet-name>
        <servlet-class>controller.ChangePassController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChangePassController</servlet-name>
        <url-pattern>/changePass</url-pattern>
    </servlet-mapping>

</web-app>
